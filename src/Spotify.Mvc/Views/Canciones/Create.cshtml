@model Spotify.Mvc.Models.CancionCreateViewModel
@{
    ViewData["Title"] = "Crear Canción";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-music text-warning"></i> Crear Canción
    </h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Información de la Nueva Canción</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Titulo" class="form-label">Título de la Canción *</label>
                        <input asp-for="Titulo" class="form-control" placeholder="Ej: Bohemian Rhapsody" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DuracionSegundos" class="form-label">Duración *</label>
                        <div class="row">
                            <div class="col-md-4">
                                <label class="form-label">Minutos</label>
                                <input type="number" id="minutos" class="form-control" min="0" max="59" placeholder="Min" value="0" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Segundos</label>
                                <input type="number" id="segundos" class="form-control" min="0" max="59" placeholder="Seg" value="0" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Total Segundos</label>
                                <input asp-for="DuracionSegundos" type="number" id="totalSegundos" class="form-control" readonly />
                                <span asp-validation-for="DuracionSegundos" class="text-danger"></span>
                            </div>
                        </div>
                        <small class="form-text text-muted">Usa los campos de minutos y segundos para establecer la duración</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AlbumId" class="form-label">Álbum *</label>
                        <select asp-for="AlbumId" class="form-select" 
                                asp-items="@(new SelectList(Model.Albumes ?? new List<Spotify.Core.Album>(), "idAlbum", "Titulo"))">
                            <option value="">-- Seleccionar Álbum --</option>
                        </select>
                        <span asp-validation-for="AlbumId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ArtistaId" class="form-label">Artista *</label>
                        <select asp-for="ArtistaId" class="form-select" 
                                asp-items="@(new SelectList(Model.Artistas ?? new List<Spotify.Core.Artista>(), "idArtista", "NombreArtistico"))">
                            <option value="">-- Seleccionar Artista --</option>
                        </select>
                        <span asp-validation-for="ArtistaId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="GeneroId" class="form-label">Género *</label>
                        <select asp-for="GeneroId" class="form-select" 
                                asp-items="@(new SelectList(Model.Generos ?? new List<Spotify.Core.Genero>(), "idGenero", "genero"))">
                            <option value="">-- Seleccionar Género --</option>
                        </select>
                        <span asp-validation-for="GeneroId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-spotify">
                            <i class="fas fa-save"></i> Crear Canción
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Información</h5>
            </div>
            <div class="card-body">
                <p class="text-white">
                    <i class="fas fa-info-circle text-warning"></i> 
                    Completa todos los campos obligatorios (*) para crear una nueva canción.
                </p>
                <p class="text-white">
                    Usa los campos de minutos y segundos para establecer la duración de forma intuitiva.
                </p>
                <p class="text-white">
                    Ejemplos:
                </p>
                <ul class="text-white small">
                    <li>3 minutos = 180 segundos</li>
                    <li>4:30 minutos = 270 segundos</li>
                    <li>2:15 minutos = 135 segundos</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            function actualizarTotalSegundos() {
                var minutos = parseInt($('#minutos').val()) || 0;
                var segundos = parseInt($('#segundos').val()) || 0;
                
                // Validar segundos (no más de 59)
                if (segundos > 59) {
                    $('#segundos').val(59);
                    segundos = 59;
                }
                
                var totalSegundos = (minutos * 60) + segundos;
                $('#totalSegundos').val(totalSegundos);
                
                // Mostrar preview formateado
                var formatoTiempo = minutos.toString().padStart(2, '0') + ':' + 
                                    segundos.toString().padStart(2, '0');
                if (!$('#durationPreview').length) {
                    $('#totalSegundos').after('<small id="durationPreview" class="form-text text-success"></small>');
                }
                $('#durationPreview').text('Duración: ' + formatoTiempo);
            }

            $('#minutos, #segundos').on('input', actualizarTotalSegundos);
            
            // Inicializar
            actualizarTotalSegundos();
        });
    </script>
}