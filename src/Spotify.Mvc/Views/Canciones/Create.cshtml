@model Spotify.Mvc.Models.CancionCreateViewModel
@{
    ViewData["Title"] = "Crear Canción";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-music text-warning"></i> Crear Canción
    </h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Información de la Nueva Canción</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Titulo" class="form-label">Título de la Canción *</label>
                        <input asp-for="Titulo" class="form-control" placeholder="Ej: Bohemian Rhapsody" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Duracion" class="form-label">Duración (en segundos) *</label>
                        <input asp-for="Duracion" type="number" class="form-control" placeholder="Ej: 180 (3 minutos)" min="1" />
                        <span asp-validation-for="Duracion" class="text-danger"></span>
                        <small class="form-text text-muted">Ingresa la duración en segundos. 60 segundos = 1 minuto</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AlbumId" class="form-label">Álbum *</label>
                        <select asp-for="AlbumId" class="form-select" 
                                asp-items="@(new SelectList(Model.Albumes ?? new List<Spotify.Core.Album>(), "idAlbum", "Titulo"))">
                            <option value="">-- Seleccionar Álbum --</option>
                        </select>
                        <span asp-validation-for="AlbumId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ArtistaId" class="form-label">Artista *</label>
                        <select asp-for="ArtistaId" class="form-select" 
                                asp-items="@(new SelectList(Model.Artistas ?? new List<Spotify.Core.Artista>(), "idArtista", "NombreArtistico"))">
                            <option value="">-- Seleccionar Artista --</option>
                        </select>
                        <span asp-validation-for="ArtistaId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="GeneroId" class="form-label">Género *</label>
                        <select asp-for="GeneroId" class="form-select" 
                                asp-items="@(new SelectList(Model.Generos ?? new List<Spotify.Core.Genero>(), "idGenero", "genero"))">
                            <option value="">-- Seleccionar Género --</option>
                        </select>
                        <span asp-validation-for="GeneroId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-spotify">
                            <i class="fas fa-save"></i> Crear Canción
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Información</h5>
            </div>
            <div class="card-body">
                <p class="text-white">
                    <i class="fas fa-info-circle text-warning"></i> 
                    Completa todos los campos obligatorios (*) para crear una nueva canción.
                </p>
                <p class="text-white">
                    La canción se asociará automáticamente con el álbum, artista y género seleccionados.
                </p>
                <p class="text-white">
                    Asegúrate de que el artista y el álbum estén correctamente relacionados en el sistema.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Convertir duración a formato legible en tiempo real
            $('#Duracion').on('input', function() {
                var seconds = parseInt($(this).val());
                if (!isNaN(seconds) && seconds > 0) {
                    var minutes = Math.floor(seconds / 60);
                    var remainingSeconds = seconds % 60;
                    var formattedTime = minutes + ':' + (remainingSeconds < 10 ? '0' : '') + remainingSeconds;
                    
                    // Mostrar preview
                    if (!$('#durationPreview').length) {
                        $(this).after('<small id="durationPreview" class="form-text text-success"></small>');
                    }
                    $('#durationPreview').text('Duración: ' + formattedTime);
                } else {
                    $('#durationPreview').remove();
                }
            });
        });
    </script>
}