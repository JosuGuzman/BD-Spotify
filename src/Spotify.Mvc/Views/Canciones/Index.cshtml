@model List<Spotify.Mvc.Models.CancionViewModel>
@{
    ViewData["Title"] = "Canciones";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-music text-warning"></i> Canciones
    </h1>
    <a asp-action="Create" class="btn btn-spotify">
        <i class="fas fa-plus"></i> Nueva Canción
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="fas fa-music fa-3x text-muted mb-3"></i>
                <h5>No hay canciones registradas</h5>
                <p class="text-muted">Comienza agregando la primera canción.</p>
                <a asp-action="Create" class="btn btn-spotify">Crear Primera Canción</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Duración</th>
                            <th>Álbum</th>
                            <th>Artista</th>
                            <th>Género</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cancion in Model)
                        {
                            <tr>
                                <td>@cancion.IdCancion</td>
                                <td>
                                    <strong>@cancion.Titulo</strong>
                                </td>
                                <td>@cancion.Duracion.ToString( @"hh\:mm\:ss")</td>
                                <td>@cancion.AlbumTitulo</td>
                                <td>@cancion.ArtistaNombre</td>
                                <td>
                                    <span class="badge bg-info">@cancion.Genero</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@cancion.IdCancion" 
                                            class="btn btn-sm btn-outline-info" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@cancion.IdCancion" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                    title="Eliminar" 
                                                    onclick="return confirm('¿Estás seguro de eliminar esta canción?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Script para mejorar la interactividad -->
@section Scripts {
    <script>
        $(document).ready(function() {
            // Mejorar la visualización de duraciones
            $('td:nth-child(3)').each(function() {
                var duration = $(this).text();
                if (duration && !duration.includes(':')) {
                    // Si la duración no está formateada, intentar formatearla
                    var seconds = parseInt(duration);
                    if (!isNaN(seconds)) {
                        var minutes = Math.floor(seconds / 60);
                        var remainingSeconds = seconds % 60;
                        $(this).text(minutes + ':' + (remainingSeconds < 10 ? '0' : '') + remainingSeconds);
                    }
                }
            });
        });
    </script>
}