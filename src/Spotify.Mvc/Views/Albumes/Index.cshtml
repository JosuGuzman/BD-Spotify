@model List<Spotify.Mvc.Models.AlbumViewModel>
@{
    ViewData["Title"] = "Álbumes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-compact-disc text-success"></i> Álbumes
    </h1>
    <a asp-action="Create" class="btn btn-spotify">
        <i class="fas fa-plus"></i> Nuevo Álbum
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="fas fa-compact-disc fa-3x text-muted mb-3"></i>
                <h5>No hay álbumes registrados</h5>
                <p class="text-muted">Comienza agregando el primer álbum.</p>
                <a asp-action="Create" class="btn btn-spotify">Crear Primer Álbum</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Artista</th>
                            <th>Fecha Lanzamiento</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var album in Model)
                        {
                            <tr>
                                <td>@album.IdAlbum</td>
                                <td>
                                    <strong>@album.Titulo</strong>
                                </td>
                                <td>@album.NombreArtista</td>
                                <td>@album.FechaLanzamiento.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@album.IdAlbum" 
                                            class="btn btn-sm btn-outline-info" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@album.IdAlbum" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                    title="Eliminar" 
                                                    onclick="return confirm('¿Estás seguro de eliminar este álbum?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>