@model Spotify.Mvc.Models.AlbumViewModel
@{
    ViewData["Title"] = "Detalles del Álbum";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-compact-disc text-success"></i> Detalles del Álbum
    </h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Información del Álbum</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl>
                            <dt>ID:</dt>
                            <dd>@Model.IdAlbum</dd>

                            <dt>Título:</dt>
                            <dd class="h5 text-success">@Model.Titulo</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl>
                            <dt>Artista:</dt>
                            <dd>
                                <a asp-controller="Artistas" asp-action="Details" asp-route-id="@Model.IdArtista" 
                                    class="text-decoration-none">
                                    @Model.NombreArtista
                                </a>
                            </dd>

                            <dt>Fecha de Lanzamiento:</dt>
                            <dd>@Model.FechaLanzamiento.ToString("dd/MM/yyyy")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Acciones</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Canciones" asp-action="Create" class="btn btn-spotify">
                        <i class="fas fa-plus"></i> Agregar Canción
                    </a>
                    <form asp-action="Delete" method="post" class="d-grid">
                        <input type="hidden" name="id" value="@Model.IdAlbum"/>
                        <button type="submit" class="btn btn-outline-danger" 
                                onclick="return confirm('¿Estás seguro de eliminar este álbum?')">
                            <i class="fas fa-trash"></i> Eliminar Álbum
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>