@model Spotify.Mvc.Models.DashboardViewModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center mb-5 text-white">
    <h1 class="display-4 mb-3 ">Bienvenido a Spotify MVC</h1>
    <p class="lead ">Sistema de gestión musical completo</p>
</div>

<!-- Barra de búsqueda centrada -->
<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header bg-dark text-white text-center">
                <h5 class="mb-0"><i class="fas fa-search"></i> Búsqueda Rápida</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Home" asp-action="Buscar" method="post">
                    <div class="input-group">
                        <input type="text" name="query" class="form-control" placeholder="Buscar canciones..." required>
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Contenedor Estadísticas + Sidebar -->
<div class="row mt-5 justify-content-center align-items-start">
    <!-- Estadísticas a la izquierda -->
    <div class="col-lg-5 col-md-12">
        <div class="row g-3 d-flex justify-content-start">
            <div class="col-md-6 col-6">
                <div class="card bg-primary text-white text-center">
                    <div class="card-body">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Artistas" ? "active" : "")" asp-controller="Artistas" asp-action="Index">
                            <i class="fas fa-users fa-2x mb-2"></i>
                            <h4>@Model.TotalArtistas</h4>
                            <small>Artistas</small>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-6">
                <div class="card bg-success text-white text-center">
                    <div class="card-body">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Albumes" ? "active" : "")" asp-controller="Albumes" asp-action="Index">
                            <i class="fas fa-compact-disc fa-2x mb-2"></i>
                            <h4>@Model.TotalAlbumes</h4>
                            <small>Álbumes</small>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-6">
                <div class="card bg-warning text-white text-center">
                    <div class="card-body">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Canciones" ? "active" : "")" asp-controller="Canciones" asp-action="Index">
                            <i class="fas fa-music fa-2x mb-2"></i>
                            <h4>@Model.TotalCanciones</h4>
                            <small>Canciones</small>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-6">
                <div class="card bg-dark text-white text-center">
                    <div class="card-body">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Generos" ? "active" : "")" asp-controller="Generos" asp-action="Index">
                            <i class="fas fa-guitar fa-2x mb-2"></i>
                            <h4>@Model.TotalGeneros</h4>
                            <small>Géneros</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar de Enlaces Rápidos a la derecha -->
    <div class="col-lg-4 col-md-12 mt-4 mt-lg-0">
        <div class="sidebar-quicklinks card">
            <div class="card-header bg-dark text-white text-center">
                <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Enlaces Rápidos</h5>
            </div>
            <div class="card-body sidebar-content">
                <div class="d-grid gap-2">
                    <a asp-controller="Home" asp-action="Estadisticas" class="btn btn-outline-primary">
                        <i class="fas fa-chart-pie"></i> Ver Estadísticas
                    </a>
                    <a asp-controller="Usuarios" asp-action="Index" class="btn btn-outline-success">
                        <i class="fas fa-user"></i> Gestionar Usuarios
                    </a>
                    <a asp-controller="Generos" asp-action="Index" class="btn btn-outline-warning">
                        <i class="fas fa-guitar"></i> Gestionar Géneros
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>