@model Spotify.Mvc.Models.DashboardViewModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center mb-5 text-white">
    <h1 class="display-4 mb-3 ">Bienvenido a Spotify MVC</h1>
    <p class="lead ">Sistema de gestión musical completo</p>
</div>

<!-- Estadísticas del Dashboard -->
<div class="row mb-5">
    <div class="col-md-2 col-6 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <i class="fas fa-users fa-2x mb-2"></i>
                <h4>@Model.TotalArtistas</h4>
                <small>Artistas</small>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <i class="fas fa-compact-disc fa-2x mb-2"></i>
                <h4>@Model.TotalAlbumes</h4>
                <small>Álbumes</small>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <i class="fas fa-music fa-2x mb-2"></i>
                <h4>@Model.TotalCanciones</h4>
                <small>Canciones</small>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <i class="fas fa-user fa-2x mb-2"></i>
                <h4>@Model.TotalUsuarios</h4>
                <small>Usuarios</small>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
        <div class="card bg-dark text-white">
            <div class="card-body text-center">
                <i class="fas fa-guitar fa-2x mb-2"></i>
                <h4>@Model.TotalGeneros</h4>
                <small>Géneros</small>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
        <div class="card bg-secondary text-white">
            <div class="card-body text-center">
                <i class="fas fa-list fa-2x mb-2"></i>
                <h4>@Model.TotalPlaylists</h4>
                <small>Playlists</small>
            </div>
        </div>
    </div>
</div>

<!-- Acciones Rápidas -->
<div class="row mt-4">
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-primary">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x mb-3"></i>
                <h5 class="card-title">Artistas</h5>
                <p class="card-text">Gestiona artistas y sus álbumes</p>
                <a asp-controller="Artistas" asp-action="Index" class="btn btn-light">Ver Artistas</a>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-success">
            <div class="card-body text-center">
                <i class="fas fa-compact-disc fa-3x mb-3"></i>
                <h5 class="card-title">Álbumes</h5>
                <p class="card-text">Administra discografías</p>
                <a asp-controller="Albumes" asp-action="Index" class="btn btn-light">Ver Álbumes</a>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-warning">
            <div class="card-body text-center">
                <i class="fas fa-music fa-3x mb-3"></i>
                <h5 class="card-title">Canciones</h5>
                <p class="card-text">Gestiona el catálogo musical</p>
                <a asp-controller="Canciones" asp-action="Index" class="btn btn-light">Ver Canciones</a>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-info">
            <div class="card-body text-center">
                <i class="fas fa-list fa-3x mb-3"></i>
                <h5 class="card-title">Playlists</h5>
                <p class="card-text">Crea y gestiona listas de reproducción</p>
                <a asp-controller="Playlists" asp-action="Index" class="btn btn-light">Ver Playlists</a>
            </div>
        </div>
    </div>
</div>

<!-- Búsqueda y Enlaces Adicionales -->
<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="fas fa-search"></i> Búsqueda Rápida</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Home" asp-action="Buscar" method="post">
                    <div class="input-group">
                        <input type="text" name="query" class="form-control" placeholder="Buscar canciones..." required>
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Enlaces Rápidos</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Home" asp-action="Estadisticas" class="btn btn-outline-primary">
                        <i class="fas fa-chart-pie"></i> Ver Estadísticas
                    </a>
                    <a asp-controller="Usuarios" asp-action="Index" class="btn btn-outline-success">
                        <i class="fas fa-user"></i> Gestionar Usuarios
                    </a>
                    <a asp-controller="Generos" asp-action="Index" class="btn btn-outline-warning">
                        <i class="fas fa-guitar"></i> Gestionar Géneros
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>