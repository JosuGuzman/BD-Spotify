@model List<Spotify.Mvc.Models.GeneroViewModel>
@{
    ViewData["Title"] = "Géneros Musicales";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-guitar text-success"></i> Géneros Musicales
    </h1>
    <a asp-action="Create" class="btn btn-spotify">
        <i class="fas fa-plus"></i> Nuevo Género
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="fas fa-guitar fa-3x text-muted mb-3"></i>
                <h5>No hay géneros registrados</h5>
                <p class="text-muted">Comienza agregando el primer género musical.</p>
                <a asp-action="Create" class="btn btn-spotify">Crear Primer Género</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Género Musical</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var genero in Model)
                        {
                            <tr>
                                <td>@genero.IdGenero</td>
                                <td>
                                    <strong>@genero.Genero</strong>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@genero.IdGenero" 
                                            class="btn btn-sm btn-outline-info" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@genero.IdGenero" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                    title="Eliminar" 
                                                    onclick="return confirm('¿Estás seguro de eliminar este género?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>