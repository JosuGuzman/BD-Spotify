@model Spotify.Mvc.Models.ArtistModel
@{
    ViewData["Title"] = "Detalles del Artista";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-user text-primary"></i> Detalles del Artista
    </h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Información del Artista</h5>
            </div>
            <div class="card-body text-white">
                <div class="row">
                    <div class="col-md-6">
                        <dl>
                            <dt>ID:</dt>
                            <dd>@Model.IdArtista</dd>

                            <dt>Nombre Artístico:</dt>
                            <dd class="h5 text-primary">@Model.NombreArtistico</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl>
                            <dt>Nombre:</dt>
                            <dd>@Model.NombreReal</dd>

                            <dt>Apellido:</dt>
                            <dd>@Model.ApellidoReal</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Acciones</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Albumes" asp-action="Create" class="btn btn-spotify">
                        <i class="fas fa-plus"></i> Agregar Álbum
                    </a>
                    <form asp-action="Delete" method="post" class="d-grid">
                        <input type="hidden" name="id" value="@Model.IdArtista" />
                        <button type="submit" class="btn btn-outline-danger" 
                                onclick="return confirm('¿Estás seguro de eliminar este artista?')">
                            <i class="fas fa-trash"></i> Eliminar Artista
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>