@model List<Spotify.Mvc.Models.ArtistaViewModel>
@{
    ViewData["Title"] = "Artistas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-users text-primary"></i> Artistas
    </h1>
    <a asp-action="Create" class="btn btn-spotify">
        <i class="fas fa-plus"></i> Nuevo Artista
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5>No hay artistas registrados</h5>
                <p class="text-muted">Comienza agregando el primer artista.</p>
                <a asp-action="Create" class="btn btn-spotify">Crear Primer Artista</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre Artístico</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var artista in Model)
                        {
                            <tr>
                                <td>@artista.IdArtista</td>
                                <td>
                                    <strong>@artista.NombreArtistico</strong>
                                </td>
                                <td>@artista.Nombre</td>
                                <td>@artista.Apellido</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@artista.IdArtista" 
                                            class="btn btn-sm btn-outline-info" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@artista.IdArtista" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                    title="Eliminar" 
                                                    onclick="return confirm('¿Estás seguro de eliminar este artista?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>