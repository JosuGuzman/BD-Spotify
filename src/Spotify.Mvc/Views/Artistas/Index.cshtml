@model PaginatedModel<Artista>

@{
    ViewData["Title"] = "Artistas";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white">Artistas</h1>
        
        @if (User.IsInRole("3")) // Administrador
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Nuevo Artista
            </a>
        }
    </div>
    
    <!-- Barra de búsqueda -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="input-group">
                <input type="text" class="form-control bg-black border-secondary text-white" 
                       placeholder="Buscar artistas..." id="artist-search">
                <button class="btn btn-success" type="button" id="search-btn">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
        <div class="col-md-4">
            <select class="form-select bg-black border-secondary text-white" id="sort-select">
                <option value="popular">Más populares</option>
                <option value="az">A - Z</option>
                <option value="za">Z - A</option>
                <option value="newest">Más recientes</option>
            </select>
        </div>
    </div>
    
    <!-- Grid de artistas -->
    <div class="row" id="artists-container">
        @foreach (var artista in Model.Items)
        {
            <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                <div class="artist-card" data-artist-id="@artista.IdArtista">
                    <div class="artist-image-container">
                        <img src="@(artista.FotoArtista ?? "/images/default-artist.png")" 
                             alt="@artista.NombreArtistico" 
                             class="artist-image rounded-circle">
                        <button class="btn-play-artist" data-artist-id="@artista.IdArtista">
                            <i class="fas fa-play"></i>
                        </button>
                    </div>
                    <div class="artist-info mt-3">
                        <h6 class="artist-name text-white mb-1">@artista.NombreArtistico</h6>
                        <small class="text-secondary">Artista</small>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <!-- Paginación -->
    @if (Model.TotalPages > 1)
    {
        <nav class="mt-5">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-secondary" 
                       asp-action="Index" asp-route-page="@(Model.PageNumber - 1)">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == 1 || i == Model.TotalPages || (i >= Model.PageNumber - 2 && i <= Model.PageNumber + 2))
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link bg-dark text-white border-secondary" 
                               asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    else if (i == Model.PageNumber - 3 || i == Model.PageNumber + 3)
                    {
                        <li class="page-item disabled">
                            <span class="page-link bg-dark text-white border-secondary">...</span>
                        </li>
                    }
                }
                
                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-secondary" 
                       asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
    
    <!-- Mensaje si no hay artistas -->
    @if (!Model.Items.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-users text-secondary" style="font-size: 4rem;"></i>
            <h3 class="text-white mt-3">No hay artistas disponibles</h3>
            <p class="text-secondary">Pronto agregaremos más artistas.</p>
        </div>
    }
</div>

@section Styles {
<style>
    .artist-card {
        cursor: pointer;
        transition: transform 0.3s;
    }
    
    .artist-card:hover {
        transform: translateY(-5px);
    }
    
    .artist-image-container {
        position: relative;
        width: 100%;
        padding-bottom: 100%; /* Aspect ratio 1:1 */
        overflow: hidden;
        border-radius: 50%;
        background: #282828;
    }
    
    .artist-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }
    
    .artist-card:hover .artist-image {
        transform: scale(1.05);
    }
    
    .btn-play-artist {
        position: absolute;
        bottom: 10px;
        right: 10px;
        width: 45px;
        height: 45px;
        background: #1DB954;
        color: white;
        border: none;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transform: translateY(10px);
        transition: all 0.3s;
        z-index: 10;
    }
    
    .artist-card:hover .btn-play-artist {
        opacity: 1;
        transform: translateY(0);
    }
    
    .btn-play-artist:hover {
        background: #1ed760;
        transform: scale(1.1);
    }
    
    .artist-name {
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .page-item.active .page-link {
        background-color: #1DB954 !important;
        border-color: #1DB954 !important;
    }
    
    .page-link:hover {
        background-color: #282828 !important;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
        .artist-card {
            text-align: center;
        }
        
        .artist-image-container {
            width: 120px;
            height: 120px;
            padding-bottom: 0;
            margin: 0 auto;
        }
        
        .btn-play-artist {
            width: 40px;
            height: 40px;
            font-size: 0.9rem;
        }
    }
    
    /* Animación de carga */
    .loading-skeleton {
        background: linear-gradient(90deg, #282828 25%, #333 50%, #282828 75%);
        background-size: 200% 100%;
        animation: loading 1.5s infinite;
    }
    
    @@keyframes loading {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }
</style>
}

@section Scripts {
<script>
    $(document).ready(function() {
        // Búsqueda en tiempo real
        $('#artist-search').on('input', function() {
            var searchTerm = $(this).val();
            searchArtists(searchTerm);
        });
        
        // Botón de búsqueda
        $('#search-btn').click(function() {
            var searchTerm = $('#artist-search').val();
            searchArtists(searchTerm);
        });
        
        // Ordenar resultados
        $('#sort-select').change(function() {
            var sortBy = $(this).val();
            sortArtists(sortBy);
        });
        
        // Click en tarjeta de artista
        $('.artist-card').click(function(e) {
            if (!$(e.target).hasClass('btn-play-artist') && 
                !$(e.target).closest('.btn-play-artist').length) {
                var artistId = $(this).data('artist-id');
                window.location.href = '@Url.Action("Details", "Artist")/' + artistId;
            }
        });
        
        // Reproducir artista (top canciones)
        $('.btn-play-artist').click(function(e) {
            e.stopPropagation();
            var artistId = $(this).data('artist-id');
            playArtistTopSongs(artistId);
        });
    });
    
    function searchArtists(searchTerm) {
        if (searchTerm.length >= 2) {
            // Mostrar skeleton loading
            showSkeletonLoading();
            
            $.get('@Url.Action("Search", "Artist")', { term: searchTerm }, function(response) {
                if (response.success) {
                    updateArtistsGrid(response.data);
                }
            });
        } else if (searchTerm.length === 0) {
            // Recargar todos los artistas
            loadAllArtists();
        }
    }
    
    function sortArtists(sortBy) {
        var artists = $('.artist-card').toArray();
        
        artists.sort(function(a, b) {
            var nameA = $(a).find('.artist-name').text().toLowerCase();
            var nameB = $(b).find('.artist-name').text().toLowerCase();
            
            switch(sortBy) {
                case 'az':
                    return nameA.localeCompare(nameB);
                case 'za':
                    return nameB.localeCompare(nameA);
                case 'popular':
                    // Aquí deberías tener un atributo de popularidad
                    return 0; // Implementar lógica real
                case 'newest':
                    // Ordenar por fecha de creación
                    return 0; // Implementar lógica real
                default:
                    return 0;
            }
        });
        
        var container = $('#artists-container');
        container.empty();
        artists.forEach(function(artist) {
            container.append(artist);
        });
    }
    
    function showSkeletonLoading() {
        var container = $('#artists-container');
        container.empty();
        
        for (var i = 0; i < 12; i++) {
            var html = `
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                    <div class="artist-card">
                        <div class="artist-image-container loading-skeleton"></div>
                        <div class="artist-info mt-3">
                            <div class="loading-skeleton" style="height: 20px; width: 80%; margin-bottom: 5px;"></div>
                            <div class="loading-skeleton" style="height: 14px; width: 50%;"></div>
                        </div>
                    </div>
                </div>
            `;
            container.append(html);
        }
    }
    
    function updateArtistsGrid(artists) {
        var container = $('#artists-container');
        container.empty();
        
        if (artists.length === 0) {
            container.html(`
                <div class="col-12 text-center py-5">
                    <i class="fas fa-search text-secondary" style="font-size: 3rem;"></i>
                    <h4 class="text-white mt-3">No se encontraron artistas</h4>
                    <p class="text-secondary">Intenta con otros términos de búsqueda.</p>
                </div>
            `);
            return;
        }
        
        artists.forEach(function(artist) {
            var html = `
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                    <div class="artist-card" data-artist-id="${artist.id}">
                        <div class="artist-image-container">
                            <img src="${artist.fotoArtista || '/images/default-artist.png'}" 
                                 alt="${artist.nombreArtistico}" 
                                 class="artist-image rounded-circle">
                            <button class="btn-play-artist" data-artist-id="${artist.id}">
                                <i class="fas fa-play"></i>
                            </button>
                        </div>
                        <div class="artist-info mt-3">
                            <h6 class="artist-name text-white mb-1">${artist.nombreArtistico}</h6>
                            <small class="text-secondary">Artista</small>
                        </div>
                    </div>
                </div>
            `;
            container.append(html);
        });
        
        // Reconfigurar eventos
        $('.artist-card').off('click').click(function(e) {
            if (!$(e.target).hasClass('btn-play-artist') && 
                !$(e.target).closest('.btn-play-artist').length) {
                var artistId = $(this).data('artist-id');
                window.location.href = '@Url.Action("Details", "Artist")/' + artistId;
            }
        });
        
        $('.btn-play-artist').off('click').click(function(e) {
            e.stopPropagation();
            var artistId = $(this).data('artist-id');
            playArtistTopSongs(artistId);
        });
    }
    
    function loadAllArtists() {
        // Recargar página actual
        window.location.reload();
    }
    
    function playArtistTopSongs(IdArtista) {
        // Obtener top canciones del artista y reproducir
        $.get('@Url.Action("GetTopSongs", "Artist")', { id: IdArtista }, function(response) {
            if (response.success && response.songs.length > 0) {
                // Reproducir primera canción
                var firstSong = response.songs[0];
                $.post('@Url.Action("Play", "Song")', { id: firstSong.id }, function(playResponse) {
                    if (playResponse.success) {
                        updatePlayer(playResponse.song);
                        
                        // Crear queue con las demás canciones
                        var queue = response.songs.slice(1);
                        setQueue(queue);
                    }
                });
            }
        });
    }
    
    function updatePlayer(song) {
        // Actualizar player en el footer
        $('#current-song-title').text(song.title);
        $('#current-song-artist').text(song.artist);
        $('#current-song-cover').attr('src', song.cover || '/images/default-album.png');
        
        // Iniciar reproducción
        var audio = $('#main-audio')[0];
        audio.src = song.mp3Url;
        audio.play();
        
        $('#player-play-btn').html('<i class="fas fa-pause"></i>');
    }
    
    function setQueue(songs) {
        // Guardar queue en sessionStorage
        sessionStorage.setItem('playerQueue', JSON.stringify(songs));
    }
</script>
}