<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spotify MVC</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Spotify.Mvc.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar izquierdo (solo para desktop) -->
            <div class="col-md-3 col-lg-2 d-none d-md-block sidebar">
                @await Html.PartialAsync("_Sidebar")
            </div>
            
            <!-- Contenido principal -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>
    
    <!-- Navegación inferior (solo móvil) -->
    @if (ViewData["HideBottomNav"] == null)
    {
        @await Html.PartialAsync("_BottomNav")
    }
    
    <!-- Player bar (footer) -->
    @if (User.Identity.IsAuthenticated && ViewData["HidePlayer"] == null)
    {
        @await Html.PartialAsync("_PlayerBar")
    }
    
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>